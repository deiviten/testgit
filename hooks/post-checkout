#!/bin/bash
export DOT_GIT_DIR=$(git rev-parse --git-dir 2>/dev/null)
echo iniciando post-checkout...
echo args: $@
git status

branch=`git status -b | grep branch`
echo branch: $branch

version=`git log -p $2 -1 package.json | grep "+  \"version" | awk '{print $2}' FS=":" | sed 's/[\,\"\ ]//g'`
echo $version


#if [ "$1" != "$2" ]; then
#  echo commiting diffs...
#  npm version --no-git-tag-version patch
#  git add package.json
#  git commit -am "updating version before merge"
#fi

echo finalizando post-checkout
